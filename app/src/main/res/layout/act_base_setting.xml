<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/main_back">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:paddingTop="@dimen/activity_vertical_margin">

        <Switch
            android:id="@+id/act_base_setting_is_auto_exit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/text_white"
            android:padding="10dp"
            android:text="@string/act_base_setting_is_auto_exit" />

        <RadioGroup
            android:id="@+id/act_base_setting_show_view_rg"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_vertical_margin"
            android:background="@drawable/et_back"
            android:gravity="start">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/text_white"
                android:padding="5dp"
                android:text="当前选择的视图："
                android:textStyle="bold" />

            <RadioButton
                android:id="@+id/act_base_setting_linear_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="列表布局"
                android:textColor="@color/text_white" />

            <RadioButton
                android:id="@+id/act_base_setting_grid_rb"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="网格布局"
                android:textColor="@color/text_white" />

        </RadioGroup>

        <TextView
            android:id="@+id/act_base_setting_about_app"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:background="@drawable/select_white_gray"
            android:clickable="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="@string/act_base_setting_about_app" />


        <include
            layout="@layout/app_about_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="10dp" />

    </LinearLayout>
</ScrollView>