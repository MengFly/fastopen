<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <ListView
        android:id="@+id/lv_apps"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:divider="@color/none"
        android:scrollbarStyle="outsideOverlay" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:id="@+id/cardView"
        android:background="#0000"
        app:cardCornerRadius="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <android.support.v7.widget.SearchView
                android:id="@+id/sv_"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:queryHint="按照应用名称搜索"
                app:search_hint="按照应用名称搜索"
                app:search_hint_color="@color/colorTextSecond"
                app:search_icon_color="@color/colorAccent"
                app:search_text_color="@color/colorTextMain" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/as_app_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:entries="@array/app_style"
                android:gravity="center" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

</FrameLayout>
